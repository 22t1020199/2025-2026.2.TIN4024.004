{
  "version": 1,
  "author": "Linh Trương Đức Mai",
  "editor": "wokwi",
  "parts": [
    { "type": "board-esp32-devkit-c-v4", "id": "esp", "top": 0, "left": 0 },

    { "type": "wokwi-led", "id": "led_red", "top": -60, "left": -120, "rotate": 90, "attrs": { "color": "red" } },
    { "type": "wokwi-led", "id": "led_yellow", "top": -30, "left": -120, "rotate": 90, "attrs": { "color": "yellow" } },
    { "type": "wokwi-led", "id": "led_green", "top": 0, "left": -120, "rotate": 90, "attrs": { "color": "limegreen" } },

    { "type": "wokwi-resistor", "id": "r1", "top": -60, "left": -150, "rotate": 90, "attrs": { "value": "220" } },
    { "type": "wokwi-resistor", "id": "r2", "top": -30, "left": -150, "rotate": 90, "attrs": { "value": "220" } },
    { "type": "wokwi-resistor", "id": "r3", "top": 0, "left": -150, "rotate": 90, "attrs": { "value": "220" } },

    { "type": "wokwi-tm1637-7segment", "id": "seg", "top": -120, "left": 120 },

    { "type": "wokwi-photoresistor", "id": "ldr", "top": 100, "left": 120 },
    { "type": "wokwi-resistor", "id": "rldr", "top": 140, "left": 120, "rotate": 90, "attrs": { "value": "10000" } }
  ],

  "connections": [
    [ "led_red:C", "esp:GND.1", "black", [] ],
    [ "led_yellow:C", "esp:GND.1", "black", [] ],
    [ "led_green:C", "esp:GND.1", "black", [] ],

    [ "led_red:A", "r1:1", "red", [] ],
    [ "r1:2", "esp:25", "red", [] ],

    [ "led_yellow:A", "r2:1", "yellow", [] ],
    [ "r2:2", "esp:33", "yellow", [] ],

    [ "led_green:A", "r3:1", "green", [] ],
    [ "r3:2", "esp:32", "green", [] ],

    [ "seg:CLK", "esp:18", "green", [] ],
    [ "seg:DIO", "esp:19", "green", [] ],
    [ "seg:VCC", "esp:5V", "red", [] ],
    [ "seg:GND", "esp:GND.2", "black", [] ],

    [ "ldr:1", "esp:3V3", "red", [] ],
    [ "ldr:2", "esp:4", "green", [] ],
    [ "ldr:2", "rldr:1", "green", [] ],
    [ "rldr:2", "esp:GND.3", "black", [] ]
  ]
